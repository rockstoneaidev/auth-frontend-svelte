{
	"name": "@rockstoneaidev/auth-frontend-svelte",
	"version": "0.1.0",
	"description": "Beautiful, accessible Firebase authentication components for Svelte apps - built with shadcn-svelte",
	"author": "RockstoneAI Dev",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/rockstoneaidev/auth-frontend-svelte.git"
	},
	"scripts": {
		"dev": "vite dev",
		"build": "vite build && npm run prepack",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"prepack": "svelte-kit sync && svelte-package && publint",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"package": "svelte-kit sync && svelte-package"
	},
	"files": [
		"dist",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*"
	],
	"sideEffects": [
		"**/*.css"
	],
	"svelte": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"type": "module",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"svelte": "./dist/index.js"
		},
		"./styles": "./dist/app.css"
	},
	"peerDependencies": {
		"firebase": "^11.0.0",
		"svelte": "^5.0.0"
	},
	"devDependencies": {
		"@sveltejs/adapter-auto": "^7.0.0",
		"@sveltejs/kit": "^2.49.1",
		"@sveltejs/package": "^2.5.7",
		"@sveltejs/vite-plugin-svelte": "^6.2.1",
		"autoprefixer": "^10.4.20",
		"firebase": "^11.0.2",
		"postcss": "^8.4.49",
		"publint": "^0.3.15",
		"svelte": "^5.45.6",
		"svelte-check": "^4.3.4",
		"tailwindcss": "^3.4.17",
		"tailwindcss-animate": "^1.0.7",
		"typescript": "^5.9.3",
		"vite": "^7.2.6"
	},
	"keywords": [
		"svelte"
	],
	"dependencies": {
		"bits-ui": "^2.14.4",
		"firebase": "^12.7.0",
		"lucide-svelte": "^0.562.0"
	}
}